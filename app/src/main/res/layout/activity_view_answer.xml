<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAnswerActivity"
    android:background="#fff"
    >

    <TextView
        android:id="@+id/id_viewAnswer_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/alegreya_sans_medium_italic"
        android:text="This is the long question for testing purpose aa alright. Wait I have tmake it more longer?"
        android:textColor="#242323"
        android:textSize="22sp"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/id_viewAnswer_profilePhoto"
        android:layout_below="@+id/id_viewAnswer_question"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/profile_small"
        />

    <ImageView
        android:layout_below="@+id/id_viewAnswer_question"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/circle_crop"
        />

    <TextView
        android:id="@+id/id_viewAnswer_author"
        android:layout_toRightOf="@+id/id_viewAnswer_profilePhoto"
        android:layout_below="@+id/id_viewAnswer_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Divyesh Vala"
        android:textSize="15sp"
        android:textStyle="italic"
        />
    <TextView
        android:id="@+id/id_viewAnswer_about"
        android:layout_toRightOf="@+id/id_viewAnswer_profilePhoto"
        android:layout_below="@+id/id_viewAnswer_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="Cse guy from mnnit."
        android:textSize="13sp"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/id_viewAnswer_time"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/id_viewAnswer_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="10 Aug"
        android:textSize="15sp"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/id_viewAnswer_answer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/id_viewAnswer_about"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/alegreya_sans"
        android:scrollbars="vertical"
        android:text="this is the answer\nall right\n\n\nhvdhsv\nsdhshb\n\n\nsbdhsbhsbhbh\nsjbdhsbhhb\nsjcbscbshcb\nsdsbhsbhbshb\ndsbhxbhbhb\nsjdbxshbxshbxhb\nbdxshbxhsbhxbhb\nxbshxbshbhb\nscbshcshcvsvc\nsdxshbxhsbxh\n\n\nsdhshcshb\n\n\nsdbshbxhsbhbhb\nsdxbhsbxd\ndhsbxhb\nshdxhbh\nhxshxvdjsnjn\n\nxhsbhb"
        android:textSize="19sp"
        android:layout_above="@+id/layout"
        android:layout_marginBottom="5dp"
        />

    <RelativeLayout
        android:id="@+id/layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorNavIcon"
        >

        <ImageButton
            android:id="@+id/id_viewAnswer_like"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:src="@drawable/like0"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/colorNavIcon"
            />
        <TextView
            android:id="@+id/id_viewAnswer_numberOfLikes"
            android:layout_toRightOf="@+id/id_viewAnswer_like"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="2dp"
            android:text="100+"
            />

        <ImageView
            android:id="@+id/id_viewAnswer_readMore"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/details30"
            android:layout_alignParentEnd="true"
            android:background="@color/colorNavIcon"
            />

    </RelativeLayout>

</RelativeLayout>