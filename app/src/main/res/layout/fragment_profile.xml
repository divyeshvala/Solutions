<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    >

    <RelativeLayout
        android:id="@+id/id_profile_layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/id_profile_pic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile_small"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/circle_crop"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/id_profile_name"
            android:layout_toRightOf="@+id/id_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Divyesh Vala"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/id_profile_signOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sign out"
            android:layout_below="@id/id_profile_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:background="#fafafa"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_profile_layoutMiddle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_profile_layoutTop"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:id="@+id/id_profile_emailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email : "
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/id_profile_email"
            android:layout_toRightOf="@+id/id_profile_emailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="divyeshvala2222@gmail.com"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/id_profile_aboutTV"
            android:layout_below="@id/id_profile_emailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About : "
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/id_profile_about"
            android:layout_below="@id/id_profile_email"
            android:layout_toRightOf="@+id/id_profile_emailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Nothing yet alright.."
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/id_profile_layoutMiddle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_marginTop="10dp"
        >





    </RelativeLayout>



</RelativeLayout>